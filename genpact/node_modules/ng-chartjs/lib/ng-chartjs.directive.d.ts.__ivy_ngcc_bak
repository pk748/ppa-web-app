import { StoreService } from './store.service';
import { OnDestroy, OnInit, OnChanges, EventEmitter, ElementRef, SimpleChanges } from '@angular/core';
import { NgChartjsService } from './ng-chartjs.service';
export declare class NgChartjsDirective implements OnDestroy, OnChanges, OnInit {
    private ngChartjsService;
    private storeService;
    data: number[] | any[];
    datasets: any[];
    labels: any[];
    options: any;
    inlinePlugins: any[];
    chartType: string;
    colors: any[];
    legend: boolean;
    adding: {
        labels: any[];
        data: any[][];
    };
    removing: {
        orientation: string;
    };
    resetOption: any;
    chartClick: EventEmitter<any>;
    chartHover: EventEmitter<any>;
    ctx: any;
    chart: any;
    private cvs;
    private initFlag;
    private hasChanges;
    private element;
    constructor(element: ElementRef, ngChartjsService: NgChartjsService, storeService: StoreService);
    ngOnInit(): void;
    ngOnChanges(changes: SimpleChanges): void;
    ngOnDestroy(): void;
    private refresh();
    private addData(labels, data);
    private removeData(direction);
    private updateChartData(newDataValues);
    getChartBuilder(ctx: any): any;
    private getDatasets();
}
